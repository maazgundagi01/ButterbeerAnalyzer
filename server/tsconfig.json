{
  "compilerOptions": {
    "target": "esNext",
    "module": "NodeNext",               // Set module to NodeNext
    "moduleResolution": "NodeNext", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}